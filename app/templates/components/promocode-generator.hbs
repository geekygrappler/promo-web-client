{{#if savedPromocode}}
  <p>Your new promocode is: <strong>{{savedPromocode.code}}</strong></p>
  {{#if savedPromocode.customer_email}}
    <p>It must be used by: {{savedPromocode.customer_email}}</p>
  {{/if}}
{{/if}}

{{#if isAddingCode}}
  <form class="form-inline" {{action "savePromocode" on="submit"}}>
    <label class="sr-only" for="code">Code</label>
    {{input 
      type="text" 
      class="form-control mb-2 mr-sm-2 mb-sm-0" 
      id="code" 
      placeholder="Code - leave blank for random"
      size="29"
      value=newPromocode.code
    }}
    {{#if requireEmail}}
        <label 
          class="sr-only" 
          for="email"
        >
          Email
        </label>
      {{input 
        type="text" 
        class="form-control" 
        id="email" 
        placeholder="Customer's Email"
        value=newPromocode.customer_email
      }}
    {{/if}}
    <button type="submit" class="btn btn-primary ml-2">Submit</button>
  </form>
{{else}}
  <button 
    class="btn btn-success" 
    {{action "enterNewPromocode" on="click"}}
  >
    Generate PROMOCODE for this Promotion
  </button>
{{/if}}
{{yield}}