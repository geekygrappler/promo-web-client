<h2>What rules do you want to apply to use the promocode?</h2>

<div class="d-flex justify-content-center">
  <form {{action "transition" on="submit"}}>
    <div class="form-check text-left">
      <label class="form-check-label">
        {{input
          class="form-check-input"
          type="checkbox"
          checked=onePerCustomerConstraint
          change=(action "toggleConstraint" "onePerCustomerConstraint")
        }}
        A customer can only use a promocode for this promotion once
      </label>
    </div>
    <div class="form-check text-left">
      <label class="form-check-label">
        {{input
          class="form-check-input"
          type="checkbox"
          checked=specificCustomerConstraint
          change=(action "toggleConstraint" "specificCustomerConstraint")
        }}
        A promocode is linked to a customer (via email) and can only be redeemed by them.
      </label>
    </div>
    <div class="form-check text-left">
      <label class="form-check-label">
        {{input
          class="form-check-input"
          type="checkbox"
          checked=minimumBasketTotalConstraint
          change=(action "toggleMinimumBasketTotalConstraint")
        }}
        Minimum Basket Total
      </label>
      {{#if minimumBasketTotalConstraint}}
        :
        {{input
          type="text"
          class="form-control"
          value=promotion.minimumBasketTotal
        }}
      {{/if}}
    </div>
    <div class="text-center">
      <button class="btn btn-primary btn-lg">Great</button>
    </div>
  </form>
</div>

{{yield}}