<form {{action (route-action 'authenticate' form) on='submit'}}>
  <label for="identification">Login</label>
  {{input id='identification' placeholder='Enter Login' value=form.identification}}
  <label for="password">Password</label>
  {{input id='password' placeholder='Enter Password' type='password' value=form.password}}
  <button type="submit">Login</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>

{{outlet}}